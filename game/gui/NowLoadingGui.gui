function NowLoadingGui::onWake()
{
//Let's reset this loadbar...
clientCmdPlayMusic(%musicTrack);
$Loadprogress = 0;
schedule(4000, 0, "StartLoading");
echo("Loadingâ€¦");
schedule(4000, 0, "loadLoop");
}

function NowLoadingGui::onSleep()
{
echo("Done.");
schedule(250, 0, "PlaceInPos");
}

