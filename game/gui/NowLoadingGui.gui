function LoadLoop()
{
    if($loadProgress < 1.005)
    {
$LoadProgress += 0.001;
LoadBar.setValue($loadProgress);
schedule(1, 0, "LoadLoop");
    }
    else if($loadProgress > 1.005)
    {
    finalStageLoad();
    }
}

function finalStageLoad()
{
_newGame();
readFile();
Canvas.repaint();
}

